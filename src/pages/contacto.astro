---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import ContactForm from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSectioncontacto.astro';
---

<Layout title="Contacto - Envios DosRuedas">
  <Header />
  <main class="bg-gray-50 dark:bg-gray-900">
    <HeroSection 
      title="Contáctanos"
      highlightText="DosRuedas"
      description="Estamos aquí para ayudarte con cualquier consulta sobre nuestros servicios de mensajería y delivery."
    />
    
    <div class="container mx-auto px-4 py-12 md:py-16 lg:py-20">
      <div class="max-w-4xl mx-auto">
        <ContactForm />
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style is:global>
  :root {
    --color-primary-100: #e6f0ff;
    --color-primary-500: #084298;
    --color-accent-500: #0d6efd;
  }
  
  main {
    transition: background-color 0.3s ease;
  }
</style>
