---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import EnviosExpressCotizador from '../components/EnviosExpressCotizador.astro';
import Footer from '../components/Footer.astro';
import Socialbanner from '../components/socialbanner.astro';
import HeroEnviosExpressCotizador from '../components/HeroEnviosExpressCotizador.astro';
---

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAOTIWiQtyy8VWFUGIIBQBAOdebhXzL7IE"></script>

<Layout title="Mensajería Envíos Express">
  <Header />
  <main class="bg-gray-50 dark:bg-gray-900">
    <HeroEnviosExpressCotizador 
      title="Cotizador de Envíos Express"
      highlightText="Express"
      description="Servicio premium para tus envíos más urgentes"
    />
    
    <div class="container mx-auto px-4 py-12 md:py-16 lg:py-20">
      <div class="max-w-4xl mx-auto">
        <EnviosExpressCotizador />
      </div>
    </div>
    <Socialbanner />
  </main>
  <Footer />
</Layout>

<style is:global>
  :root {
    --color-primary-100: #e6f0ff;
    --color-primary-500: #084298;
    --color-accent-500: #0d6efd;
  }
  
  .container {
    scroll-margin-top: 100px;
  }
  
  main {
    transition: background-color 0.3s ease;
  }
</style>
