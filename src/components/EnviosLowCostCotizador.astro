                    precioValor = 7600;
                } else if (distanciaValor> 15 && distanciaValor <= 17) {
                    precioValor = 7600;
                } else if (distanciaValor> 17 && distanciaValor <= 19) {
                    precioValor = 9500;
                } else if (distanciaValor> 19 && distanciaValor <= 21) {
                    precioValor = 9500;
